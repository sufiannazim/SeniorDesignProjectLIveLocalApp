<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#FFFFFF"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sufian.livelocal.EstablishmentActivity"
    tools:showIn="@layout/activity_establishment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="5dp"
        android:background="#c6eec7"
        android:paddingBottom="15dp"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile: "
            android:id="@+id/locationName"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            android:textColor="#e64a19"
            android:typeface="serif" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="2dp"
        android:background="#FFFFFF"
        android:isScrollContainer="true"
        android:orientation="vertical"
        android:scrollbarAlwaysDrawVerticalTrack="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationDesc"
                    android:textColor="#795548"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="More Info"
                    android:id="@+id/moreInfoHeader"
                    android:layout_below="@+id/locationDesc"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Info"
                    android:id="@+id/contactInfoSubHeader"
                    android:layout_below="@+id/moreInfoHeader"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone: "
                    android:autoLink="phone"
                    android:id="@+id/locationPhone"
                    android:textColor="#795548"
                    android:layout_below="@id/contactInfoSubHeader"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Website: "
                    android:autoLink="web"
                    android:id="@+id/locationWebsite"
                    android:textColor="#795548"
                    android:layout_below="@+id/locationPhone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Our Locations"
                    android:id="@+id/locationInfoSubHeader"
                    android:layout_below="@+id/locationWebsite"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationInfoName"
                    android:layout_below="@id/locationInfoSubHeader"
                    android:textStyle="bold"
                    android:textColor="#795548"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationInfoStreet"
                    android:textColor="#795548"
                    android:layout_below="@id/locationInfoName"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationInfoCityStateZip"
                    android:textColor="#795548"
                    android:layout_below="@id/locationInfoStreet"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationInfoDates"
                    android:textColor="#795548"
                    android:layout_below="@id/locationInfoCityStateZip"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationInfoHours"
                    android:textColor="#795548"
                    android:layout_below="@id/locationInfoDates"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Products"
                    android:id="@+id/productsInfoHeader"
                    android:layout_below="@+id/locationInfoDates"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/colorPrimaryDark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/locationProducts"
                    android:textColor="#795548"
                    android:layout_below="@id/productsInfoHeader"/>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>