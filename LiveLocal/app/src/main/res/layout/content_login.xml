<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.sufian.livelocal.LoginActivity"
    tools:showIn="@layout/activity_login">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:paddingTop="56dp"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:id="@+id/imageView"
            android:src="@drawable/login_logo"
            android:layout_alignParentTop="true"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:textCursorDrawable="@color/colorPrimaryDark"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:met_floatingLabel="highlight"
            android:inputType="textPersonName"/>

        <!-- Password Label
        app:met_maxCharacters="20"
        -->
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textStyle="bold"
            android:textCursorDrawable="@color/colorPrimaryDark"
            app:met_baseColor="@color/colorPrimaryDark"
            app:met_primaryColor="#000000"
            android:textSize="20sp"
            android:textColor="@color/colorPrimaryDark"
            app:met_floatingLabel="highlight"
            android:inputType="textPassword"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Log in"
            android:id="@+id/buttonLogin"
            android:background="#c6eec7"
            android:textStyle="bold"
            android:textColor="#e64a19"
            android:clickable="true"
            android:layout_below="@+id/editTextPassword"
            android:layout_alignRight="@+id/editTextPassword"
            android:layout_alignEnd="@+id/editTextPassword"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Forget Password?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp"
            android:id="@+id/forgetPasswordbtn"
            android:layout_below="@+id/buttonLogin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</ScrollView>
