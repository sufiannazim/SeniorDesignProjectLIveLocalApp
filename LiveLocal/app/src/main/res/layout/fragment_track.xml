<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:background="#f2f9f2"
    tools:context="com.example.sufian.livelocal.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:paddingTop="50dp"
        android:paddingBottom="15dp"
        android:background="#c6eec7">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How much did you spend on locally grown food and gardening products today?"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/textView3"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingBottom="25dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
           />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:text="Total Spent: $"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:id="@+id/textView5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editTextAmount"
                android:layout_weight="1"
                android:backgroundTintMode="src_over"
                android:clickable="true"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/custom_background"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where? (Choose one or more)"
            android:textColor="#795548"
            android:textSize="16sp"
            android:id="@+id/textViewOptions"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:paddingBottom="35dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="237dp"
            android:layout_height="26dp"
            android:text="Submit"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:id="@+id/submitBtn"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
